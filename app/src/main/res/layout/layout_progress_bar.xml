<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.budiyev.android.circularprogressbar.CircularProgressBar
        android:id="@+id/cpb_loading"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_gravity="center"
        app:backgroundStrokeColor="@android:color/white"
        app:backgroundStrokeWidth="10dp"
        app:drawBackgroundStroke="true"
        app:foregroundStrokeCap="round"
        app:foregroundStrokeColor="@color/colorAccent"
        app:foregroundStrokeWidth="4dp"
        app:indeterminate="true"
        app:indeterminateMinimumAngle="90"
        app:indeterminateRotationAnimationDuration="1200"
        app:indeterminateSweepAnimationDuration="600"
        app:progressAnimationDuration="100"
        app:startAngle="45" />

</FrameLayout>